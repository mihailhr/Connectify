

<div id="search">
<h1>Search</h1>

<section id="findUser">
    <form action="/search" method="post">
    <label >Looking for a specific user or post? Find them!</label><br>
    <input type="text" name="keyword" minlength="3" required><br>
    <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>

</section>
{{#if error}}
<h3>{{error}}</h3>
{{else}}
{{#if resultsUser}}
<section id="resultsUser">
    {{#each resultsUser}}
    <h2>{{username}}</h2>
    <a href="/users/{{username}}"><i class="fa-solid fa-user"></i></a>
    {{/each}}
</section>
{{/if}}
{{#if resultsImage}}
<section id="resultsImage"><a href="/images/{{resultsImage.title}}"><h2>{{resultsImage.title}}</h2></a>
<h2><a href="/users/{{resultsImage.creator}}"><i class="fa-solid fa-user"></i></a> {{resultsImage.creator}}</h2>
<a href="/images/{{resultsImage.title}}"><img src="data:image/jpeg;base64,{{resultsImage.img}}" alt="{{resultsImage.title}}" /></a></section>

{{/if}}
{{/if}}

</div>