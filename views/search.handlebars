

<div id="search">
<h1>Search</h1>

<section id="findUser">
    <form action="/search" method="post">
    <label >Looking for a specific user? Find them!</label><br>
    <input type="text" name="username" minlength="5" required><br>
    <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>

</section>
{{#if error}}
<h3>{{error}}</h3>
{{else}}
<section>
    <h2>{{results.username}}</h2>
    <a href="/users/{{results.username}}"><i class="fa-solid fa-user"></i></a>
</section>
{{/if}}

</div>