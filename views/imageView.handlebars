<div id="imageView">
<h1>{{results.title}}</h1>
<a href="/users/{{results.creator}}"><i class="fa-solid fa-user"></i></a> 
<h2>{{results.creator}}</h2>
<img src="data:image/jpeg;base64,{{buffer}}" alt="{{results.title}}" />
{{#if isAuth}}
{{#if isAuthor}}
<button>Edit</button>
<button>Delete</button>
{{else}}

{{#if hasLiked}}
<form action="/images/{{results.title}}" method="post">
<button type="submit" id="unlike"><i  class="fa-regular fa-heart"></i></button>
</form>

{{else}}
<form action="/images/{{results.title}}" method="post">
<button type="submit" id="like"><i  class="fa-regular fa-heart"></i></button>
</form>
{{/if}}

{{/if}}
{{/if}}
</div>